<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>nbfcService</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/sdnext-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <listener>
    <listener-class>com.nbfc.controller.ApplicationSessionListner</listener-class>
  </listener>
  <servlet-mapping>
    <servlet-name>nbfcService</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SessionManager</servlet-name>
    <servlet-class>com.nbfc.helper.SessionManager</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <filter>
    <filter-name>WebFilter</filter-name>
    <filter-class>com.nbfc.helper.WebFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>WebFilter</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CSRF_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter>
    <filter-name>OTP_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter>
    <filter-name>NEWMLI_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter>
    <filter-name>OLDMLI_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter>
    <filter-name>NewUser_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter>
    <filter-name>EditUser_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter>
    <filter-name>Vendor_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter>
    <filter-name>UPDATEMLI_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter>
    <filter-name>SendCode_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter>
    <filter-name>ChangePWD_Filter</filter-name>
    <filter-class>com.nbfc.helper.CSRF_Filter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CSRF_Filter</filter-name>
    <url-pattern>/LoginSubmitForm.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>OTP_Filter</filter-name>
    <url-pattern>/OTPSubmissions.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>NEWMLI_Filter</filter-name>
    <url-pattern>/newMLIRegistration1.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>OLDMLI_Filter</filter-name>
    <url-pattern>/getDetails.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UPDATEMLI_Filter</filter-name>
    <url-pattern>/updatetMLIDetails.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>NewUser_Filter</filter-name>
    <url-pattern>/updatetMLIDetails1.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SendCode_Filter</filter-name>
    <url-pattern>/ForgotPassword.html</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Captcha</servlet-name>
    <servlet-class>com.nbfc.utility.CaptchaServlet</servlet-class>
    <init-param>
      <description>passing height</description>
      <param-name>height</param-name>
      <param-value>40</param-value>
    </init-param>
    <init-param>
      <description>passing width</description>
      <param-name>width</param-name>
      <param-value>70</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Captcha</servlet-name>
    <url-pattern>/CaptchaImg.jpg</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>400</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>402</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>501</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>502</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>504</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <error-page>
    <error-code>505</error-code>
    <location>/WEB-INF/views/404Page.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>15</session-timeout>
  </session-config>
  <context-param>
    <param-name>com.sun.faces.sendPoweredByHeader</param-name>
    <param-value>false</param-value>
  </context-param>
</web-app>